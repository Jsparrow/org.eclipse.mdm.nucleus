<web-app xmlns="http://java.sun.com/xml/ns/javaee" version="3.0">

	<security-constraint>
        <web-resource-collection>
            <web-resource-name>
                Entire Application
            </web-resource-name>
            <url-pattern>/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>MDM</role-name>
        </auth-constraint>
    </security-constraint>

	<security-role>
        <role-name>MDM</role-name>
    </security-role>
	<login-config>
        <auth-method>BASIC</auth-method>
        <realm-name>MDMLoginRealm</realm-name>
    </login-config>
</web-app>